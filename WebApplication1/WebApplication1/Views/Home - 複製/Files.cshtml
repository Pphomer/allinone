@model WebApplication1.Models.FilesViewModel

<p>List of Files</p>

<div class="container">
    <div class="row" style="display:flex; flex-wrap: wrap;">
    @foreach (var item in Model.Files)
    {
        <div>
            <img src="~/UploadFiles/@item.Name" alt="@item.Name" asp-append-version="true">
        </div>
    }
</div>
</div>